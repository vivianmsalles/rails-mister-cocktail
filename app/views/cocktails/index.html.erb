<div class="container">
  <h1 class="mx-3 ">Our cocktails</h1>
  <div class="d-flex justify-content-start flex-wrap mt-3">
    <br>
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <img src="https://images.pexels.com/photos/2336667/pexels-photo-2336667.jpeg?auto=compress&cs=tinysrgb&h=650&w=940"/>
        <div class="card-bottom">
          <h2><%= cocktail.name %></h2>
          <div class="d-flex ml-0 my-2">
            <%= link_to "Details", cocktail_path(cocktail), class:"mr-3" %>
            <%= link_to "Delete",
                        cocktail_path(cocktail),
                        method: :delete,
                        data: { confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

